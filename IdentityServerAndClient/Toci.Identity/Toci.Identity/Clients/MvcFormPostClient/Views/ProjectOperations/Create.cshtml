@model MvcFormPostClient.Models.ProjectModel

@{
    ViewBag.Title = "Create";
}

<h2>CreateProject</h2>


@using (Html.BeginForm("CreateProject", "CreateController")) 
{
    

    <div class="form-horizontal">
        <h4>ClaimedProjectListModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                
                <div>Project name:<br/>@Html.TextBoxFor(x=>x.ProjectName)
                </div>
                <div>Scope name:<br />@Html.TextBoxFor(x => x.ScopeName)
                </div>
                <div>Project author:<br/>@Html.TextBoxFor(x => x.ProjectAuthor)
                </div>
                <div>Project data:<br/>@Html.TextBoxFor(x => x.ProjectData)
                </div>


                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
