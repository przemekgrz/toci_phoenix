@using Toci.Client.Models
@model Toci.Client.Models.VazcoResponseModel
@{
    ViewBag.Title = "Vazco Oauth Response";
}
<h4>@ViewBag.Title</h4>
<h5>Token data:</h5>
<ul>
    <li>Token type: @Model.token_type</li>
    <li>Received token: @Model.access_token</li>
    <li>Expires in: @Model.expires_in</li>
</ul>
<h5>User data:</h5>
<ul>
    <li>Id: @Model.id</li>
    <li>Email: @Model.email</li>
</ul>

<!-- TODO FORMULARZ POWINIEN UZUPEŁNIĆ MODEL O HASŁO I POWINNO SIĘ DAĆ GO PRZEKAZAĆ DO REGISTERA-->
@using (Html.BeginForm("register", "Oauth",new {id=Model.id, email=Model.email}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Pass password</legend>
        <div class="col-md-6">
            @Html.PasswordFor(model => model.password, new {@title= "Password must contain one big letter, digit, special sign and at least 6 characters", @align = "left", @pattern = @"(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}", @class = "form-control" })
         </div>
    
        <p>
            <input type="submit" class="btn btn-default" value="Create account" model="@Model" />
        </p>
    </fieldset>
}
