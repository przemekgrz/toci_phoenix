                                <td>@role <input type="button"class="btn btn-danger" value="delete" /></td>

                            </tr>

                        }
                            <tr>
                                <td>
                                    <div style="display: inline-flex">
                                        <input placeholder="add role" class="form-control" style="fit-position:left" /> <input type="button" class="btn btn-success" value="add" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    }
    </tbody>
    <!--Add footer for totals-->
</table>





